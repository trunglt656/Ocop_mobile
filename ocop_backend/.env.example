# OCOP E-commerce Backend Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration - Choose one of the following:
# For local MongoDB: mongodb://localhost:27017/ocop_ecommerce
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ocop_ecommerce
MONGODB_URI=mongodb://localhost:27017/ocop_ecommerce

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10000000
FILE_UPLOAD_PATH=./uploads

# Admin Configuration
ADMIN_EMAIL=admin@ocop.vn
ADMIN_PASSWORD=admin123
